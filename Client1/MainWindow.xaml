<Window x:Name="mw" x:Class="Client1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client1"
        mc:Ignorable="d"
        Title="Uhr" Height="450" Width="800" WindowStartupLocation="CenterScreen" Closing="mw_Closing">
    <Canvas Background="Gainsboro">
        <Menu Name="MainMenu" IsMainMenu="True" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="48" RenderTransformOrigin="0.786,0.875">
            <MenuItem Header="Server" Width="48" Focusable="False" Height="21">
                <MenuItem x:Name="connect" Header="Verbinden" Click="Connect_Click" />
                <Separator></Separator>
                <MenuItem x:Name="disconnect" Header="Trennen" Click="Disconnect_Click"/>
                <Separator></Separator>
                <MenuItem x:Name="close" Header="Ende" Click="Close_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbTime" Content="00:00:00" Canvas.Left="278" Canvas.Top="181" Height="80" Width="228" FontSize="50" FontWeight="Bold"/>
    </Canvas>
</Window>
